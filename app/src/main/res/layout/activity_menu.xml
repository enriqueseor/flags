<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/guess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="50sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/new_comic_title"
            android:gravity="center"
            android:text="@string/guess_the"
            android:textAlignment="center"
            android:textColor="@color/fontColor" />

        <Button
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/menu_button"
            android:fontFamily="@font/new_comic_title"
            android:gravity="center"
            android:text="@string/country"
            android:textAlignment="center"
            android:onClick="flagToCapitalMode"
            android:textAllCaps="false"
            android:textColor="#370617"/>

        <Button
            android:id="@+id/capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/menu_button"
            android:fontFamily="@font/new_comic_title"
            android:gravity="center"
            android:onClick="flagToCapitalMode"
            android:text="@string/capital"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#370617"/>

        <Button
            android:id="@+id/flag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/menu_button"
            android:fontFamily="@font/new_comic_title"
            android:gravity="center"
            android:onClick="countryToFlagMode"
            android:text="@string/flag_a"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#370617"/>

        <Button
            android:id="@+id/flag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/menu_button"
            android:fontFamily="@font/new_comic_title"
            android:gravity="center"
            android:onClick="capitalToFlagMode"
            android:text="@string/flag_b"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#370617"/>

</androidx.appcompat.widget.LinearLayoutCompat>